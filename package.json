{
  "name": "ppfds",
  "version": "0.1.0",
  "main": "main.js",
  "private": true,
  "scripts": {
    "start": "npm-run-all -p electron:serve ng:serve",
    "ng:build": "yarn run electron:tsc && ng build --base-href ./",
    "ng:serve": "ng serve",
    "electron:tsc": "tsc -p tsconfig-serve.json",
    "electron:serve": "wait-on tcp:4200 && yarn run electron:tsc && electron . --serve",
    "electron:build": "electron-builder build",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@abp/ng.account": "~2.9.0",
    "@abp/ng.identity": "~2.9.0",
    "@abp/ng.setting-management": "~2.9.0",
    "@abp/ng.theme.basic": "~2.9.0",
    "@angular/animations": "~9.1.0",
    "@angular/common": "~9.1.0",
    "@angular/compiler": "~9.1.0",
    "@angular/core": "~9.1.0",
    "@angular/forms": "~9.1.0",
    "@angular/platform-browser": "~9.1.0",
    "@angular/platform-browser-dynamic": "~9.1.0",
    "@angular/router": "~9.1.0",
    "rxjs": "~6.5.4",
    "tslib": "^1.10.0",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.901.0",
    "@angular-devkit/build-ng-packagr": "~0.901.0",
    "@angular/cli": "~9.1.0",
    "@angular/compiler-cli": "~9.1.0",
    "@angular/language-service": "~9.1.0",
    "@ngxs/logger-plugin": "^3.6.2",
    "@types/jasmine": "~3.5.0",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^12.11.1",
    "codelyzer": "^5.1.2",
    "electron": "^9.0.5",
    "electron-builder": "^22.7.0",
    "jasmine-core": "~3.5.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~4.4.1",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~2.1.0",
    "karma-jasmine": "~3.0.1",
    "karma-jasmine-html-reporter": "^1.4.2",
    "ng-packagr": "^9.0.0",
    "protractor": "~5.4.3",
    "ts-node": "~8.3.0",
    "tslint": "~6.1.0",
    "typescript": "~3.8.3",
    "wait-on": "^5.0.1",
    "yarn-run-all": "^3.1.1"
  },
  "build": {
    "appId": "swjtu.tpl.vsg",
    "productName": "ppfds",
    "copyright": "Copyright Â© year taujiong",
    "directories": {
      "output": "release/"
    },
    "files": [
      "**/*",
      "!**/*.ts",
      "!*.code-workspace",
      "!LICENSE.md",
      "!package.json",
      "!package-lock.json",
      "!src/",
      "!e2e/",
      "!hooks/",
      "!angular.json",
      "!karma.conf.js",
      "!tsconfig.json",
      "!tslint.json"
    ],
    "win": {
      "icon": "dist/favicon.ico",
      "target": [
        "portable"
      ]
    }
  }
}
